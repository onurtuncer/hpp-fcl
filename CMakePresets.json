{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },

  "configurePresets": [
    {
      "name": "vs-x64-release",
      "displayName": "VS 64-bit Release",
      "description": "Visual Studio generator, x64, Release config for hpp-fcl",
      "generator": "Visual Studio 17 2022", // or your exact VS generator
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/vs-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "vs-x64-release-build",
      "configurePreset": "vs-x64-release",
      "configuration": "Release"
    }
  ]
}

